<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/underline_color">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/imageWelcome"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/image_welcome" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Wisata Kebumen"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageWelcome" />

            <RelativeLayout
                android:id="@+id/secondRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstRow">

                <ImageButton
                    android:id="@+id/imgBtnContribute"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/jigsaw" />

                <ImageButton
                    android:id="@+id/imgBtnProfile"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:layout_marginStart="@dimen/home_icon_margin"
                    android:layout_toEndOf="@id/imgBtnContribute"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/user" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBtnContribute"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="-10dp"
                    android:text="Contribute"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBtnProfile"
                    android:layout_marginStart="138dp"
                    android:layout_marginTop="-10dp"
                    android:text="Profile"
                    android:textColor="@color/colorAccent" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/thirdRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondRow">

                <ImageButton
                    android:id="@+id/imgBtnAbout"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/info" />

                <ImageButton
                    android:id="@+id/imgBtnHelp"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:layout_marginStart="@dimen/home_icon_margin"
                    android:layout_toEndOf="@id/imgBtnAbout"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/question" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBtnAbout"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="-10dp"
                    android:text="About"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBtnHelp"
                    android:layout_marginStart="148dp"
                    android:layout_marginTop="-10dp"
                    android:text="Help"
                    android:textColor="@color/colorAccent" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/firstRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <ImageButton
                    android:id="@+id/imgBtnAllSpot"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/tent" />

                <ImageButton
                    android:id="@+id/imgBtnMySpot"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:layout_marginStart="@dimen/home_icon_margin"
                    android:layout_toEndOf="@id/imgBtnAllSpot"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBtnAllSpot"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="-10dp"
                    android:text="All Spot"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBtnMySpot"
                    android:layout_marginStart="118dp"
                    android:layout_marginTop="-10dp"
                    android:text="Favourite Spot"
                    android:textColor="@color/colorAccent" />
            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
